@{
    ViewData["Title"] = "Quotes";
}



@model MegaDeskMVC.Models.NewQuotesViewModelResponce

<div asp-validation-summary="All"></div>


<span asp-validation-for="responceVM.FirstName"></span>   

<form method="post">
<div id="NewQuote">
    <lable> First Name </lable>
    <input name="FirstName" value="@Model.responceVM.FirstName">


    <lable> Last Name </lable>
    <input name="LastName" value="@Model.responceVM.LastName">
            
    <lable> Desk Width </lable>
    <input name="DeskWidth" value="@Model.responceVM.deskWidth"  placeholder="Between 36 AND 86" >

        
    <lable> Desk Length </lable>
    <input name="DeskLength" value="@Model.responceVM.deskLength" placeholder="Between 24 AND 120">
        
    <lable> Drawers </lable>
    <select name="drawers">
            @if (Model.responceVM.drawers == 1){
                <option value="1" SELECTED> 1 </option>
            } else {
                <option value="1"> 1 </option>
            }

            @if (Model.responceVM.drawers == 2){
                <option value="2" SELECTED> 2 </option>
            } else {
                <option value="2"> 2 </option>
            }

            @if (Model.responceVM.drawers == 3){
                <option value="3" SELECTED> 3 </option>
            } else {
                <option value="3"> 3 </option>
            }


            @if (Model.responceVM.drawers == 4){
                <option value="4" SELECTED> 4 </option>
            } else {
                <option value="4"> 4 </option>
            }

            @if (Model.responceVM.drawers == 5){
                <option value="5" SELECTED> 5 </option>
            } else {
                <option value="5"> 5 </option>
            }

            @if (Model.responceVM.drawers == 6){
                <option value="6" SELECTED> 6 </option>
            } else {
                <option value="6"> 6 </option>
            }

            @if (Model.responceVM.drawers == 7){
                <option value="7" SELECTED> 7 </option>
            } else {
                <option value="7"> 7 </option>
            }

            @if (Model.responceVM.drawers == 8){
                <option value="8" SELECTED> 8 </option>
            } else {
                <option value="8"> 8 </option>
            }

            @if (Model.responceVM.drawers == 9){
                <option value="9" SELECTED> 9 </option>
            } else {
                <option value="9"> 9 </option>
            }
        
    </select>
        

    <lable> Material </lable>
    <select name="material">

        @foreach (var item in Model.materialsVM.material)
        {

            @if (Model.responceVM.material == item.Description)
            {
                <option value="@item.Description" SELECTED> @item.Description &nbsp; @item.Price </option>

            } else 
            {
                <option value="@item.Description"> @item.Description &nbsp; @item.Price </option>
            }

        }
       
    </select>
    
    <lable> Shipping Days </lable>
    <select name="shippingDays">


            @if (Model.responceVM.shippingDays == 3)
            {
                <option value="3" SELECTED> 3 </option>

            } else 
            {
                <option value="3"> 3 </option>
            }

             @if (Model.responceVM.shippingDays == 5)
            {
                <option value="5" SELECTED> 5 </option>

            } else 
            {
                <option value="5"> 5 </option>
            }

             @if (Model.responceVM.shippingDays == 7)
            {
                <option value="7" SELECTED> 7 </option>

            } else 
            {
                <option value="7"> 7 </option>
            }

             @if (Model.responceVM.shippingDays == 14)
            {
                <option value="14" SELECTED> 14 </option>

            } else 
            {
                <option value="14"> 14 </option>
            }
       
        
            
    </select>

    <lable> &nbsp; </lable>
    <button type="submit"> Submit </button>


    
    
</div>
</form>


