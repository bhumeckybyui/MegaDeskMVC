@{
    ViewData["Title"] = "Quotes";
}

@Html.ValidationSummary()

@model MegaDeskMVC.Models.MaterialsViewModel

<form method="post">
<div id="NewQuote">
    <lable> First Name </lable>
    <input type="text" name="FirstName">

    <lable> Last Name </lable>
    <input type="text" name="LastName">

    <lable> Desk Width </lable>
    <input type="text" name="DeskWidth" placeholder="Between 36 AND 86" >

    <lable> Desk Length </lable>
    <input type="text" name="DeskLength" placeholder="Between 24 AND 120">


    <lable> Drawers </lable>
    <select name="drawers">
        <option value="1"> 1 </option>
         <option value="2"> 2 </option>
         <option value="3"> 3 </option>
         <option value="4"> 4 </option>
         <option value="5"> 5 </option>
         <option value="6"> 6 </option>
         <option value="7"> 7 </option>
         <option value="8"> 8 </option>
         <option value="9"> 9 </option> 
    </select>
        

    <lable> Material </lable>
    <select name="material">

        @foreach (var item in Model.material)
        {
            <option value="@item.Description"> @item.Description &nbsp; @item.Price </option>
        }
       
    </select>
    
    <lable> Shipping Days </lable>
    <select name="shippingDays">

       
        <option value="1"> 3 </option>
        <option value="5"> 5 </option>
        <option value="7"> 7 </option>
        <option value="14" SELECTED> 14 </option>
            
    </select>

    <lable> &nbsp; </lable>
    <button type="submit"> Submit </button>


    
    
</div>
</form>